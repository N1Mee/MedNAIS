generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String    @unique
  emailVerified      DateTime?
  password           String?   // Hashed password (optional for backward compatibility)
  verificationToken  String?   @unique // Token for email verification
  image              String?
  bio                String?   @db.Text
  role               String    @default("buyer") // buyer or seller
  stripeConnectId    String?   @unique // Stripe Connect account ID for payouts
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  accounts    Account[]
  sessions    Session[]
  sops        SOP[]
  purchases   Purchase[]
  revenues    Revenue[]
  sopSessions SOPSession[]
  ratings     Rating[]
  comments    Comment[]
  cartItems   CartItem[]

  @@index([email])
  @@index([role])
  @@index([verificationToken])
  @@index([stripeConnectId])
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?  @db.Text
  icon        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sops SOP[]

  @@index([slug])
}

model SOP {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  price       Float    @default(0)
  imageUrl    String?  // Main SOP image for marketplace display
  attachments Json?    // Array of attachment objects: [{name, cloud_storage_path, size, type}]
  visibility  String   @default("public") // public or private
  categoryId  String?
  authorId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category      Category?      @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  author        User           @relation(fields: [authorId], references: [id], onDelete: Cascade)
  steps         Step[]
  purchases     Purchase[]
  revenues      Revenue[]
  sopSessions   SOPSession[]
  ratings       Rating[]
  comments      Comment[]
  cartItems     CartItem[]

  @@index([authorId])
  @@index([categoryId])
  @@index([visibility])
  @@index([createdAt])
}

model Step {
  id               String   @id @default(cuid())
  sopId            String
  order            Int
  title            String
  description      String?  @db.Text
  imageUrl         String?  // Legacy single image (kept for backward compatibility)
  images           String[] // Multiple images for the step
  videoUrl         String?  // YouTube video URL
  duration         Int?     // Estimated duration in minutes
  countdownSeconds Int?     // Optional countdown timer in seconds
  question         String?  // Optional yes/no question
  questionType     String?  // Type: "yes_no" or null
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  sop          SOP           @relation(fields: [sopId], references: [id], onDelete: Cascade)
  sessionSteps SessionStep[]

  @@index([sopId])
  @@index([order])
}

// Payment and Commerce models
model Purchase {
  id                String   @id @default(cuid())
  userId            String
  sopId             String
  stripeSessionId   String?  @unique
  stripePaymentId   String?  @unique
  amount            Float    // Total amount paid
  platformFee       Float    // 30% platform fee
  sellerRevenue     Float    // 70% to seller
  promoCodeId       String?
  status            String   @default("pending") // pending, completed, failed, refunded
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  sop       SOP        @relation(fields: [sopId], references: [id], onDelete: Cascade)
  promoCode PromoCode? @relation(fields: [promoCodeId], references: [id])
  revenue   Revenue?

  @@index([userId])
  @@index([sopId])
  @@index([status])
  @@index([createdAt])
}

model PromoCode {
  id              String   @id @default(cuid())
  code            String   @unique
  discountPercent Int      // Percentage discount (e.g., 10 for 10%)
  discountAmount  Float?   // Fixed amount discount
  maxUses         Int?     // Maximum number of uses (null = unlimited)
  usedCount       Int      @default(0)
  expiresAt       DateTime?
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  purchases Purchase[]

  @@index([code])
  @@index([active])
}

model Revenue {
  id            String   @id @default(cuid())
  sellerId      String
  sopId         String
  purchaseId    String   @unique
  amount        Float    // Seller's 70% revenue
  platformFee   Float    // Platform's 30% fee
  status        String   @default("pending") // pending, paid, processing
  payoutDate    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  seller   User     @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  sop      SOP      @relation(fields: [sopId], references: [id], onDelete: Cascade)
  purchase Purchase @relation(fields: [purchaseId], references: [id], onDelete: Cascade)

  @@index([sellerId])
  @@index([sopId])
  @@index([status])
  @@index([createdAt])
}

// SOP Execution and Tracking models
model SOPSession {
  id            String   @id @default(cuid())
  userId        String
  sopId         String
  status        String   @default("in_progress") // in_progress, completed, abandoned
  totalDuration Int      @default(0) // Total time spent in seconds
  startedAt     DateTime @default(now())
  completedAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  sop          SOP           @relation(fields: [sopId], references: [id], onDelete: Cascade)
  sessionSteps SessionStep[]

  @@index([userId])
  @@index([sopId])
  @@index([status])
  @@index([startedAt])
}

model SessionStep {
  id            String   @id @default(cuid())
  sessionId     String
  stepId        String
  timeSpent     Int      @default(0) // Time spent on this step in seconds
  answer        String?  // Answer to question (yes/no) if applicable
  startedAt     DateTime @default(now())
  completedAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  session SOPSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  step    Step       @relation(fields: [stepId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([stepId])
}

// Rating and Review models
model Rating {
  id        String   @id @default(cuid())
  userId    String
  sopId     String
  rating    Int      // 1-5 stars
  review    String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  sop  SOP  @relation(fields: [sopId], references: [id], onDelete: Cascade)

  @@unique([userId, sopId]) // One rating per user per SOP
  @@index([userId])
  @@index([sopId])
  @@index([rating])
}

model Comment {
  id        String   @id @default(cuid())
  userId    String
  sopId     String
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  sop  SOP  @relation(fields: [sopId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([sopId])
  @@index([createdAt])
}

// Shopping Cart model
model CartItem {
  id        String   @id @default(cuid())
  userId    String
  sopId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  sop  SOP  @relation(fields: [sopId], references: [id], onDelete: Cascade)

  @@unique([userId, sopId]) // One item per user per SOP
  @@index([userId])
  @@index([sopId])
}
